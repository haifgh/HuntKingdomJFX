<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="userPane" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SlidePaneUserController">
   <children>
      <JFXButton buttonType="RAISED" onAction="#goToShop" prefWidth="300.0" style="-fx-background-color: #013220;" text="SHOP" textFill="#b5b4b4">
         <font>
            <Font name="Monospaced Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </JFXButton>
      <JFXButton buttonType="RAISED" onAction="#goToCart" prefWidth="300.0" style="-fx-background-color: #013220;" text="CART" textFill="#b5b4b4">
         <font>
            <Font name="Monospaced Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </JFXButton>
      <JFXButton buttonType="RAISED" onAction="#goToOrders" prefWidth="300.0" style="-fx-background-color: #013220;" text="ORDERS" textFill="#b5b4b4">
         <font>
            <Font name="Monospaced Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </JFXButton>
      <JFXButton buttonType="RAISED" onAction="#goToGuide" prefWidth="300.0" style="-fx-background-color: #013220;" text="GUIDES" textFill="#b5b4b4">
         <font>
            <Font name="Monospaced Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </JFXButton>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
